.disable-hover,
.disable-hover * 
	pointer-events none !important

.gutters
	padding $gutters
	
.gutter
	&-top
		padding-top $gutter-top
	&-bottom
		padding-bottom $gutter-bottom
	
.w3c
	visibility hidden
	display none
	
.content__wrapper
	overflow hidden
	width 100%
	height 100%

.block-title
	font 16px $SemiBold 
	margin-bottom 20px
	

.text-center
	text-align center
	
.text-left
	text-align left
	
.text-right
	text-align right
	
.basic-white-color
	color $basic-white-color

.basic-black-color
	color $basic-black-color
	
.light-text-color
	color $light-text-color
	
.dark-text-color
	color $dark-text-color
	
.accent-color
	color $accent-color
	
.content-img
	display block
	margin 0 auto
	max-width 100%
	max-height 100%
	width auto
	height auto
	
.bg
	bg(50%, 50%)
	
.bg-with-overlay
	position relative
	bg(50%, 50%)
	&:before
		pseudo()
		position absolute
		fullSize()
		background-color rgba($bg-overlay-color, $bg-overlay-opacity)
	.container
		position relative
		z-index 2
		
.color-bg
	background-color $color-bg
	
.visually-hidden
	position absolute
	clip rect(0 0 0 0)
	width 1px
	height 1px
	margin -1px
	z-index -999
	opacity 0
	visiiblity hidden
	
.thumbnail
	position relative
	overflow hidden
	width 100%
	padding-top 50%
	img
		display block
		position absolute
		position-center()
		width 100%
		height 100%
		object-fit cover


.b-radius
	border-radius $b-radius
	
.blur-block
	padding 15px
	background-color rgba(255, 255, 255, 0.02)
	box-shadow 0px 24px 94px rgba(0, 0, 0, 0.22)
	backdrop-filter blur(150px)
	border $border
	
.icon-title
	display flex
	flex-wrap nowrap
	align-items center
	justify-content flex-start
	margin-bottom 40px
	font 16px $SemiBold
	svg
		flex none
		margin-left 16px
	&__ic
		flex none
		width 68px
		height 68px
		background-color $basic-black-color
		background-position 50% 50%
		background-repeat no-repeat
		background-size 28px 28px
		margin-right 20px
		box-shadow 0px 7px 24px rgba(0, 0, 0, 0.28)
		border-radius 19px

.content
	padding 40px
	color $light-text-color
	*
		&:last-child
			margin-bottom 0
			
	h1
		margin-bottom 26px
		color $text-color
		font 16px $SemiBold
			
	h2,h3
		color $text-color
		
	strong, b
		font-family $SemiBold
		


		
	p + h2,
	p + h3
		margin-top 20px
		

	ul, ol
		li
			display block
			position relative
			margin-bottom 10px
			
			&:last-child
				margin-bottom 0
				
	ul
		li
			&:before
				pseudo()
				width 4px
				height 4px
				border-radius 50%
				margin-right 4px
				background-color currentColor
				vertical-align middle
				
				
	ol
		counter-reset list
		li
			&:before
				counter-increment list
				content counter(list) ". "
				display inline-block
				margin-right 4px
				

ol
	counter-reset list
	li
		position relative
		padding-left 30px
		&:before
			counter-increment list
			content "0"counter(list)
			display inline-block
			position absolute
			top 0
			left 0
			