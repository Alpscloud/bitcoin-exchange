.btn
	display inline-block
	font 16px $Med
	line-height 1
	text-align center
	color $text-color
	transition all .17s ease-in-out
	backface-visibility hidden
	background-color $accent-color
	box-shadow 0px 10px 54px rgba(69, 121, 255, 0.5)
	border-radius 19px
	min-width 180px
	padding 26px
	&:hover
		box-shadow none
		
	&-wide
		width 100%
	
		
	

	&-hamburger
		display none
		flex none
		width 47px
		height 47px
		border-radius 15px
		background-color rgba(255, 255, 255, 0.07)
		backdrop-filter: blur(104px)
		position absolute
		vertical-center()
		right 5px
		transition background-color .17s ease-in-out
	
		span
			width 22px
			height 2px
			background-color $basic-white-color
			display block
			margin-bottom 7px
			transition all 0.3s ease-in-out	
			border-radius 50px
			position absolute
			left 12.5px
			top 27px
			&:nth-child(1)
				width 14px
				top 18px
			
		&.is-active
			span
				&:nth-child(1)
					width 22px
					transform translateY(5px) rotate(45deg)
				&:nth-child(2)
					transform translateY(-4px) rotate(-45deg)
		