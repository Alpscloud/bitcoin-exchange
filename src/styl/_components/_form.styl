input[type="search"]
	appearance none
	-webkit-appearance none			

input[type="search"]::-webkit-search-decoration,
input[type="search"]::-webkit-search-cancel-button,
input[type="search"]::-webkit-search-results-button,
input[type="search"]::-webkit-search-results-decoration
	appearance none
	-webkit-appearance none
	backface-visibility hidden
	transform translate3d(0,0,0)




.form
	&-input
		display block
		width 100%
		padding 24px 20px
		text-align left
		background rgba(0, 0, 0, 0.12)
		border 0.5px solid rgba(0, 0, 0, 0.2)
		border-radius 19px
		font 16px $Med
		color $text-color
		transition all .17s ease-in-out
		&:hover,
		&:focus
			border-color $accent-color
			
		&.is-error
			border-color $error-color
			
		&-placeholder
			display inline-block
			font 16px $Med
			position absolute
			vertical-center()
			left 20px
			z-index 1
			pointer-events none
			&-center
				position-center()
			span
				color $error-color
			
			
	&-group
		position relative
		margin-bottom 10px
		&:last-child
			margin-bottom 0
			
		&__label
			display inline-block
			margin-bottom 5px
			
	&-textarea
		min-height 200px
		height 100%
		+ .form-input-placeholder
			top 24px
			transform none
	



.form-groups
	&__row
		margin-left -20px
		margin-right -20px
		margin-bottom 30px
	&__col
		padding-left 20px
		padding-right 20px
		.form-group-full
			height 100%

div.form-input
	&:hover
		border-color rgba(0,0,0,.2) !important


.form-select
	position absolute
	top -2px
	left -2px
	right -2px
	border-radius 19px
	background-color $basic-black-color
	border 0.5px solid rgba(0, 0, 0, 0.2)
	z-index 2
	box-shadow 0px 10px 34px rgba(0, 0, 0, 0.4)
	transition all .17s ease-in-out
	opacity 0
	margin-top 15px
	visibility hidden
	pointer-events none
	
	
	
	&__wrapper
		position relative
		cursor pointer
		&:after
			pseudo()
			position absolute
			vertical-center()
			right 20px
			width 10px
			height 5px
			background url('../img/icons/svg/select.svg') 50% no-repeat / contain
			z-index 3
			pointer-events none
		&:hover
			> .form-input
				border-color $accent-color !important
		&.is-active
			&:after
				transform translateY(-50%) rotate(-180deg)
			.form-select
				opacity 1
				margin-top 0
				visibility visible
				pointer-events auto
			
	&-option
		transition background-color .17s ease-in-out
		cursor pointer
		padding-left 20px
		padding-right 20px
		&:first-child
			border-radius 19px 19px 0 0
		&:last-child
			border-radius 0 0 19px 19px
			.form-select-option__inner
				border-bottom none
		&:hover
			background-color rgba(255, 255, 255, 0.08)
		&__inner
			padding 18px 0
			border-bottom 0.5px solid rgba(255, 255, 255, 0.15)
			.exchange-heading__currency
				padding 0