.sect__exchange
	padding-bottom 40px

.exchange
	&-heading
		margin-bottom 20px
		padding 53px 57px
		background #7900B3
		background linear-gradient(94.07deg, #E650D7 1.45%, #7113E9 56.15%, #7900B3 100%)
		border $border
		box-shadow 0px 24px 94px rgba(0, 0, 0, 0.22)
		backdrop-filter blur(150px)
		.icon-title
			margin-bottom 0
		&__title
			flex none
			
		&__currencies
			flex 1
			display flex
			flex-wrap nowrap
			align-items center
.exchange-arrow
		display inline-block
		width 11px
		height 14px
		fill $basic-white-color
		flex none
		margin 0 13px
				

.exchange-heading__currency
	flex 1
	display flex
	flex-wrap nowrap
	align-items center
	justify-content flex-start
	padding-top 18px
	padding-bottom 18px
	font-size 14px
	&-logo
		display inline-block
		width 32px
		height 32px
		flex none
		margin-right 20px
		img
			width 100%
			height 100%
			display block
			
	.main-currency
		&__abbr
			margin-bottom 0
			margin-right 10px
			

.exchange
	padding 30px
	&-information
		color $light-text-color
		padding-top 30px
		border-top 0.5px solid rgba(0, 0, 0, 0.2)
		p
			margin-bottom 30px
			font-family $SemiBold
		li
			margin-bottom 20px
			&:last-child
				margin-bottom 0
		*:last-child
			margin-bottom 0
			
	&-form
		padding-bottom 30px
		.exchange-arrow
			margin-top 137px
		&__col
			flex 1
			&-heading
				margin-bottom 40px
		.icon-title
			margin-bottom 0
			margin-right 15px
			
		&__user
			padding-top 30px
			border-top 0.5px solid rgba(0, 0, 0, 0.2)
			margin-top 30px
			&-fields
				width 100%
				max-width 700px
				margin-left -20px
				margin-right -20px
				.form-group
					flex 1
					padding-left 20px
					padding-right 20px
					margin-bottom 0
					
.currency-rate
	color $light-text-color
	white-space nowrap
	font 16px $SemiBold