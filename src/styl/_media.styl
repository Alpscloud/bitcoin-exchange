// Media queris mixins add there
@import '../../node_modules/stylus-media-queries/index.styl'
/* -------Screen sizes----------- 
+screen(minWidth, maxWidth)
+max-screen(maxWidth)
+min-screen(minWidth)
+screen-height(minHeight, maxHeight)
+max-screen-height(maxHeight)
+min-screen-height(minHeight)
*/
+max-screen(1100px)
	.main-currency-exchange
		padding-right 5px
		
	.main-currencies-exchange .main-currencies__heading
		padding-right 0
		
	.main-currencies__col
		max-width 260px
		
	.main-currencies__heading
		padding-right 0
		
	.main-currency__title
		max-width 140px
		
	.reviews
		padding 60px 30px
		
	// Exchange
	.exchange-heading
		&__row
			flex-wrap wrap
		&__title
			width 100%
			margin-bottom 10px
		
+max-screen(992px)
	.main-currency-exchange
		.currency-bell
			display none
			
	.reviews
		border none
		padding 0
		&-heading
			padding-right 15px
			padding-left 15px
		&__row
			//display block
			white-space nowrap
			overflow-x auto
			padding-left 5px
			margin-left 0
			margin-right 0
			
			
	.sect__reviews
		.container
			padding-right 0
			padding-left 0
			
	.review
		border $border
		border-radius $mobile-b-radius
		padding 60px 20px
		white-space normal
		height 100%
		&__wrapper
			padding 0
			width 260px
			flex none
			margin-right 10px
			display inline-block
			vertical-align top
			

	.sect__all-reviews
		.container
			padding-left 5px
			padding-right 5px
			
		.reviews
			padding 30px 15px
			&__row
				margin-left -10px
				margin-right -10px
				overflow auto
			
		.review
			border none
			border-bottom $border
			border-radius 0
			padding 0
			padding-bottom 20px
			&__wrapper
				width 33.3333%
				display block
				margin-right 0
				padding-left 10px
				padding-right 10px

	// Contact
	.form-groups
		&__row
			flex-wrap wrap
		&__col
			width 100%
			margin-bottom 10px
			&:last-child
				margin-bottom 0
				
	// Exchange
	.exchange-form__col-heading
		position relative
		
		.icon-title
			margin-right 0
			&__text
				display block
				transform translateY(-12px)
		
		.currency-rate
			position absolute
			left 88px
			bottom 12px
			
	.exchange-form__user
		> .row
			flex-wrap wrap
			
			.icon-title
				width 100%
				margin-bottom 40px
		&-fields
			max-width 100%

+max-screen(768px)

	.main-currencies__row
		justify-content space-between

	.main-currencies
		padding 5px
		&__col
			max-width calc(50% - 5px)
			margin-right 0
			
	.main-currencies-exchange
		&__list
			padding 5px
		&__col
			max-width calc(50% - 5px)
			
	.main-currency
		&__logo
			width 52px
			height 52px
			margin-right 5px
			
	.b-radius
		border-radius $mobile-b-radius


	
	

	.hidden-pre-mobile
		display none !important

+max-screen(700px)
	.container
		padding-left 5px
		padding-right 5px
		
	.block-tite,
	.main-currencies__heading
		margin-bottom 15px
		
	.main-currencies__heading
		margin-left 0
		margin-right 0
		
	.block-title
		padding-left 10px
		
	.header
		position relative
		&__row
			padding 15px 0
			height 60px
			justify-content center
			position relative
			z-index 15
	.nav
		position fixed
		top 0
		left 0
		width 100%
		height 100vh
		z-index -1
		padding 150px 20px
		background-color rgba(255, 255, 255, 0.02)
		box-shadow 0px 24px 94px rgba(0, 0, 0, 0.22)
		backdrop-filter blur(150px)
		transition all .17s ease-in-out
		opacity 0
		visibility hidden
		pointer-events none
		&.is-opened
			opacity 1
			visibility visible
			pointer-events auto
		&-list
			flex-col-center()
		&-item
			margin-right 0
			margin-bottom 30px
			&:last-child
				margin-bottom 0

	.btn-hamburger
		display flex
		
	.logo
		font-size 24px
		
	.partners
		padding 30px 15px
		
	.partner
		width 33.3333%
		
	.sect__main-currencies
		padding-bottom 40px
	

	.content
		padding 30px 15px
		

	.contact
		padding 30px 15px
		
	.icon-title
		margin-bottom 20px
		&__ic
			width 52px
			height 52px
			background-size 22px 22px
			margin-right 12px
			
	.form-input
		padding 16px 10px
		border-radius 15px
		&-placeholder
			left 10px
			
	.form-textarea+.form-input-placeholder
		top 15px
		
	.form
		.btn
			width 100%
			
	.sect__all-reviews
		.review
			&__wrapper
				width 50%
				
	// Exchange
	.exchange-heading
		padding 10px
		&__row
			flex-wrap wrap
		&__title
			width 100%
			margin-bottom 10px
		&__currency
			padding 10px
			&-logo
				margin-right 10px
			
			.main-currency__abbr,
			.main-currency__title
				display block
				width 100%
				
	.exchange-arrow
		margin-left 7px
		margin-right 7px
		
	// Exchange
	.exchange
		padding 10px
		padding-bottom 20px
		&-form
			padding-bottom 20px
			.exchange-arrow
				display none
			&__row
				flex-wrap wrap
			&__col
				width 100%
				flex none
				padding-bottom 20px
				margin-bottom 20px
				border-bottom 0.5px solid rgba(0, 0, 0, 0.2)
				&:last-child
					padding-bottom 0
					margin-bottom 0
					border-bottom none
		
	.exchange-form__col-heading
		margin-bottom 20px
		.icon-title
			&__text
				transform translateY(-9px)
		
		.currency-rate
			left 64px
			bottom 7px
			
	.currency-rate
		font-size 14px

			
	.exchange-form__user
		padding-top 20px
		margin-top 20px
		> .row
			.icon-title
				margin-bottom 20px
				
		&-fields
			flex-wrap wrap
			margin 0
			.form-group
				width 100%
				flex none
				margin-bottom 5px
				padding 0
				&:last-child
					margin-bottom 0
					
	.form-input-placeholder
		vertical-center()
		left 10px
		
	.exchange-information
		padding-top 20px
		
	.btn
		padding 19px
		

	.form-input-placeholder
		font-size 14px
		
	.form-select__wrapper
		.main-currency__abbr, 
		.main-currency__title
			display inline-block
			width auto
			vertical-align middle
		.main-currency__abbr
			margin-bottom 0
			
		.main-currency__title
			max-width 100% !important
			
	.exchange-form__col
		.form-group
			margin-bottom 5px
			&:last-child
				margin-bottom 0
		
+max-screen(364px)
	.main-currency__title
		max-width 75px
		
	.sect__all-reviews
		.reviews__row
			margin-bottom 0
		.review
			&__wrapper
				width 100%
				margin-bottom 20px
				&:last-child
					margin-bottom 0
					.review
						border-bottom 0
						padding-bottom 0